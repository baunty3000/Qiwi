<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" android:layout_marginTop="6dp"
        android:orientation="horizontal" android:layout_marginBottom="6dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_weight="5"
            android:layout_width="match_parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/etBottomMessage"
        />
    </LinearLayout>
    <Button
            android:text="Чек"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_weight="1" android:layout_width="wrap_content"/>
</LinearLayout>