<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" android:layout_marginTop="6dp"
        android:orientation="vertical" android:layout_marginBottom="6dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:layout_marginTop="3dp"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSpinnerBottom"
            android:layout_marginTop="3dp"/>
</LinearLayout>